<section class="vh-100 dark"">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black shadow-lg " style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
              <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add To The Stack</p>
              <%= form_with(model: @superhero) do |f| %>
              <%# Name %>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :name, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Name</label>
                    </div>
                  </div>
                  <%# Full Name %>
                    <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :full_name, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Full Name</label>
                    </div>
                  </div>
                  <%# Image %>
                      <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <%= f.url_field :image, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Image URL</label>
                    </div>
                  </div>
                  <%# Place of Birth %>
                         <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                   <%= f.text_field :place_of_birth, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Place of Birth (Enter - if unknown) </label>
                    </div>
                  </div>
                     <%# Gender %>
                         <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                   <%= f.text_field :gender, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Gender</label>
                    </div>
                  </div>
                              <%# Height %>
                         <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                   <%= f.text_field :height, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Height</label>
                    </div>
                  </div>
                             <%# Weight %>
                         <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                   <%= f.text_field :weight, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Weight</label>
                    </div>
                  </div>
                               <%# Intelligence %>
                         <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                   <%= f.text_field :intelligence, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Intelligence (Enter a numeric value between 1-100)</label>
                    </div>
                  </div>
                               <%# Strength %>
                         <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                   <%= f.text_field :strength, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Strength (Enter a numeric value between 1-100)</label>
                    </div>
                  </div>
                               <%# Speed %>
                         <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                   <%= f.text_field :speed, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Speed (Enter a numeric value between 1-100)</label>
                    </div>
                  </div>
                               <%# Power %>
                         <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                   <%= f.text_field :power, { class: "form-control" } %>
                      <label class="form-label" for="form3Example1c">Power (Enter a numeric value between 1-100)</label>
                    </div>
                  </div>
                
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= f.submit class: "btn btn-primary btn-lg" %>
                  </div>
                </form>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <%# <%= image_tag @superhero.image, class: "img-fluid" %> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>




