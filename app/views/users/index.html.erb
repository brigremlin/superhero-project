<h1 class ="text-center mt-4"> Superhero Stackers </h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="row g-4 justify-content-md-center">
      <div class="col-5 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text"><%= pluralize(user.superheroes.count, "superhero") %></p>
            <%= link_to "View profile", user, class: "btn btn-primary" %>
            <% if logged_in? && (user == current_user || current_user.admin? ) %>
              <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-primary" %>
            <% end %>
          </div>
       
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination margin-bottom">
    <%= will_paginate @superheroes, :container => false %>
  </div>
