<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? && (@user == current_user || current_user.admin? ) %>
<div class = "text-center mt-4"> 
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-primary" %>
      <%= link_to "Delete your profile", user_path(@user), class: "btn btn-primary", method: :delete, data:{confirm: "Are you sure you want to delete your profile?"} %>
</div>
<% end %>

<%= render 'superheroes/superhero' %>